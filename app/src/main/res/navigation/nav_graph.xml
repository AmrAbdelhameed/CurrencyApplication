<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_convert_currency">

    <fragment
        android:id="@+id/fragment_convert_currency"
        android:name="com.example.currencyapplication.presentation.ui.convert_currency.ConvertCurrencyFragment"
        android:label="Convert Currency"
        tools:layout="@layout/fragment_convert_currency">

        <action
            android:id="@+id/to_currency_details"
            app:destination="@id/fragment_currency_details" />
    </fragment>

    <fragment
        android:id="@+id/fragment_currency_details"
        android:name="com.example.currencyapplication.presentation.ui.currency_details.CurrencyDetailsFragment"
        tools:layout="@layout/fragment_currency_details" />
</navigation>